    "def DigitCountSum (k):\n",
    "    s=0\n",
    "    kol=0\n",
    "    while k !=0:\n",
    "        s+=k%10\n",
    "        kol+=1\n",
    "        k=k//10\n",
    "    return( s , kol )\n",
    "    "
   ]
