    "def LuckyNum(num):\n",
    "    digit1 = num // 1000\n",
    "    digit2 = (num // 100) % 10\n",
    "    digit3 = (num // 10) % 10\n",
    "    digit4 = num % 10\n",
    "    return digit1 + digit2 == digit3 + digit4\n",
    "\n",
    "for num in range(1000, 10000):\n",
    "    if LuckyNum(num):\n",
    "        print(num)"
   ]
