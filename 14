    "def Calc(A, B, Op):\n",
    "    if Op == 1:\n",
    "        return A - B\n",
    "    elif Op == 2:\n",
    "        return A * B\n",
    "    elif Op == 3:\n",
    "        return A / B\n",
    "    else:\n",
    "        return A + B"
   ]
