    "def SumRange (A,B):\n",
    "    res=0\n",
    "    if A>B:\n",
    "       res=0\n",
    "    else:\n",
    "       for i in range(A,B+1):\n",
    "            res+=i\n",
    "    return(res)\n",
    "a=int(input('введите a'))\n",
    "b=int(input('введите b')) \n",
    "suma=SumRange (a,b)\n",
    "print ('результат  =',suma)              "
   ]
