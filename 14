    "def RectPS(x1, y1, x2, y2):\n",
    "    a = abs(x2 - x1)\n",
    "    b = abs(y2 - y1)\n",
    "    P = 2 * (a + b)\n",
    "    S = a * b\n",
    "    return P, S\n",
    "\n",
    "x1 = float(input('x1: '))\n",
    "y1 = float(input('y1: '))\n",
    "x2 = float(input('x2: '))\n",
    "y2 = float(input('y2: '))\n",
    "\n",
    "P, S = RectPS(x1, y1, x2, y2)\n",
    "print(f\"P = {P}, S = {S}\")"
   ]
