    "def IsIdent (S):\n",
    "    if not S:\n",
    "       return False\n",
    "    if S[0] in \"0123456789\":\n",
    "        return False\n",
    "    for char in S:\n",
    "        # Разрешенные символы: \n",
    "        # латинские буквы a-z, A-Z, цифры 0-9, и _\n",
    "        if not (('a' <= char <= 'z') or \n",
    "                ('A' <= char <= 'Z') or \n",
    "                ('0' <= char <= '9') or \n",
    "                (char == '_')):\n",
    "            return False\n",
    "    \n",
    "    return True\n",
    "print(IsIdent(\"GVhЛОРello\"))\n",
    "        "
   ]
  },
