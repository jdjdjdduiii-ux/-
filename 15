    "def sum_diagonal(matrix, diagonal_type):\n",
    "    n = len(matrix)\n",
    "    total = 0\n",
    "    \n",
    "    if diagonal_type == 1:  # главная диагональ\n",
    "        for i in range(n):\n",
    "            total += matrix[i][i]\n",
    "    else:  # побочная диагональ\n",
    "        for i in range(n):\n",
    "            total += matrix[i][n-1-i]\n",
    "    \n",
    "    return total\n",
    "\n",
    "# Создаем матрицу 3x3 \n",
    "matrix = [\n",
    "    [1, 2, 3],\n",
    "    [4, 5, 6],\n",
    "    [7, 8, 9]\n",
    "]\n",
    "\n",
    "# Показываем матрицу\n",
    "print(\"Наша матрица:\")\n",
    "for row in matrix:\n",
    "    print(row)\n",
    "\n",
    "# Спрашиваем пользователя\n",
    "print(\"\\nКакую диагональ суммировать?\")\n",
    "print(\"1 - Главная (из левого верхнего угла)\")\n",
    "print(\"2 - Побочная (из правого верхнего угла)\")\n",
    "choice = int(input(\"Ваш выбор (1 или 2): \"))\n",
    "\n",
    "# Считаем сумму\n",
    "result = sum_diagonal(matrix, choice)\n",
    "\n",
    "# Показываем результат\n",
    "if choice == 1:\n",
    "    print(f\"Сумма главной диагонали: {result}\")\n",
    "else:\n",
    "    print(f\"Сумма побочной диагонали: {result}\")"
   ]
