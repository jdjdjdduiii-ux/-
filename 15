    "def RemoveRowCol (A, K, L):\n",
    "    M = len(A)      # количество строк\n",
    "    N = len(A[0])   # количество столбцов\n",
    "    \n",
    "    # Проверяем, что K и L не выходят за границы матрицы\n",
    "    if K >= M or L >= N:\n",
    "        return A    # если выходят - возвращаем исходную матрицу\n",
    "    \n",
    "    # Создаем пустую матрицу для результата\n",
    "    new_matrix = []\n",
    "    \n",
    "    # Проходим по всем строкам матрицы\n",
    "    for i in range(M):\n",
    "        # Пропускаем строку с номером K (которую нужно удалить)\n",
    "        if i != K:\n",
    "            # Создаем новую строку\n",
    "            new_row = []\n",
    "            # Проходим по всем столбцам в текущей строке\n",
    "            for j in range(N):\n",
    "                # Пропускаем столбец с номером L (который нужно удалить)\n",
    "                if j != L:\n",
    "                    # Добавляем элемент в новую строку\n",
    "                    new_row.append(A[i][j])\n",
    "            # Добавляем готовую строку в новую матрицу\n",
    "            new_matrix.append(new_row) \n",
    "    # Возвращаем результат\n",
    "    return new_matrix\n",
    "matrix = [\n",
    "    [1, 2, 3],\n",
    "    [4, 5, 6],\n",
    "    [7, 8, 9]\n",
    "]\n",
    "\n",
    "result = RemoveRowCol(matrix, 1, 1)\n",
    "\n",
    "print(\"Было:\")\n",
    "for row in matrix:\n",
    "    print(row)\n",
    "\n",
    "print(\"Стало:\")\n",
    "for row in result:\n",
    "    print(row)\n"
   ]
  },
