    "def InvertStr ( s , k ,n ):\n",
    "    dl=len(s)\n",
    "    if k > dl:\n",
    "        return '' \n",
    "    if dl< k+n :\n",
    "        substring = s[k-1:]\n",
    "    else:\n",
    "        # Берем ровно N символов начиная с K\n",
    "        substring = s[k-1:k-1+n]\n",
    "    \n",
    "    # Инвертируем подстроку\n",
    "    inverted = substring[::-1]\n",
    "    return inverted\n",
    "\n",
    "s = \"abcdefghijk\"\n",
    "result=InvertStr ( s , 2 ,4 )\n",
    "print ('полyченный резултат =',result)"
   ]
