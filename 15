    "def MtrProd(A, B):\n",
    "    if len(A[0]) != len(B):\n",
    "        return \"Ошибка: количество столбцов A должно равняться количеству строк B\"\n",
    "    m = len(A)      # строк в A\n",
    "    n = len(A[0])   # столбцов в A (должно равняться строкам в B)\n",
    "    p = len(B[0])   # столбцов в B\n",
    "    \n",
    "    # 1. Создаем матрицу-результат\n",
    "    C = []\n",
    "    for i in range(m):\n",
    "        row = []\n",
    "        for j in range(p):\n",
    "            row.append(0)\n",
    "        C.append(row)\n",
    "    \n",
    "    # 2. Заполняем результат\n",
    "    for i in range(m):          # каждая строка A\n",
    "        for j in range(p):      # каждый столбец B\n",
    "            for k in range(n):  # суммируем произведения\n",
    "                C[i][j] += A[i][k] * B[k][j]\n",
    "    \n",
    "    return C\n",
    "A = [\n",
    "    [1, 2],\n",
    "    [3, 4]\n",
    "]\n",
    "\n",
    "B = [\n",
    "    [5, 6],\n",
    "    [7, 8]\n",
    "]\n",
    "\n",
    "print(\"Матрица A:\")\n",
    "for row in A:\n",
    "    print(row)\n",
    "\n",
    "print(\"\\nМатрица B:\")\n",
    "for row in B:\n",
    "    print(row)\n",
    "\n",
    "result = MtrProd(A, B)\n",
    "\n",
    "print(\"\\nПроизведение A × B:\")\n",
    "for row in result:\n",
    "    print(row)    "
   ]
