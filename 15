   "source": [
    "def CompressStr(S):\n",
    "    result = \"\"          \n",
    "    i = 0                \n",
    "    \n",
    "    while i < len(S):    \n",
    "        # Шаг 1: Запоминаем текущую букву\n",
    "        letter = S[i]\n",
    "        count = 1        # Уже видим одну букву\n",
    "        \n",
    "        # Шаг 2: Считаем одинаковые буквы вперед\n",
    "        # Смотрим на следующую букву (i+1), потом на (i+2) и т.д.\n",
    "        while i + count < len(S) and S[i + count] == letter:\n",
    "            count += 1   # Нашли еще одну такую же букву\n",
    "        \n",
    "        # Шаг 3: Решаем как записать\n",
    "        if count > 4:\n",
    "            result += f\"{letter}{{{count}}}\"  # Сжатая запись\n",
    "        else:\n",
    "            result += letter * count          # Обычная запись\n",
    "        \n",
    "        # Шаг 4: Перепрыгиваем через все посчитанные буквы\n",
    "        i += count\n",
    "    \n",
    "    return result\n",
    "test1 = \"aaabbbbbcc\"\n",
    "result1 = CompressStr(test1)\n",
    "print(f\"Было: {test1}\")\n",
    "print(f\"Стало: {result1}\")    "
   ]
  },
