    "def SumMtr(A, B):\n",
    "    # Проверяем размеры\n",
    "    if len(A) != len(B) or len(A[0]) != len(B[0]):\n",
    "        return None  # или выбросить ошибку\n",
    "    \n",
    "    # Создаем и заполняем результирующую матрицу\n",
    "    C = []\n",
    "    for i in range(len(A)):\n",
    "        row = []\n",
    "        for j in range(len(A[0])):\n",
    "            row.append(A[i][j] + B[i][j])\n",
    "        C.append(row)\n",
    "    \n",
    "    return C\n",
    "\n",
    "A = [\n",
    "    [1, 2],\n",
    "    [3, 4]\n",
    "]\n",
    "\n",
    "B = [\n",
    "    [5, 6],\n",
    "    [7, 8]\n",
    "]\n",
    "\n",
    "print(\"Матрица A:\")\n",
    "for row in A:\n",
    "    print(row)\n",
    "\n",
    "print(\"\\nМатрица B:\")\n",
    "for row in B:\n",
    "    print(row)\n",
    "\n",
    "result = SumMtr (A, B)\n",
    "\n",
    "print(\"готовая матрица \")\n",
    "for row in result:\n",
    "    print(row)        \n"
   ]
