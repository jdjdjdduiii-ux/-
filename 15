    "def Chessboard(M, N):\n",
    "    matrix = []\n",
    "    for i in range(M):\n",
    "        row = []\n",
    "        for j in range(N):\n",
    "            # Если сумма индексов чётная - 0, нечётная - 1\n",
    "            if (i + j) % 2 == 0:\n",
    "                row.append(0)\n",
    "            else:\n",
    "                row.append(1)\n",
    "        matrix.append(row)\n",
    "    return matrix\n",
    "result= Chessboard(3, 3)\n",
    "for row in result:\n",
    "    print(row)\n",
    "    "
