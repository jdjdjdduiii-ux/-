    "def Bell(L):\n",
    "    if not L:\n",
    "        return []\n",
    "    \n",
    "    sorted_L = sorted(L)  # сортируем от меньшего к большему\n",
    "    result = [0] * len(L)  # создаём список нужной длины с нулями\n",
    "    \n",
    "    left_index = 0      # индекс для вставки слева (начало)\n",
    "    right_index = len(L) - 1  # индекс для вставки справа (конец)\n",
    "    \n",
    "    # Берём элементы по очереди из отсортированного списка\n",
    "    for i in range(len(sorted_L)):\n",
    "        if i % 2 == 0:  # чётные индексы (0, 2, 4...) - вставляем слева\n",
    "            result[left_index] = sorted_L[i]\n",
    "            left_index += 1\n",
    "        else:  # нечётные индексы (1, 3, 5...) - вставляем справа\n",
    "            result[right_index] = sorted_L[i]\n",
    "            right_index -= 1\n",
    "    \n",
    "    return result\n",
    "L=[1,4,6,2,9,12]\n",
    "print( Bell(L))   "
   ]
  },
