    "def Transp (A):\n",
    "    M = len(A)\n",
    "    for i in range(M):\n",
    "        for j in range(i + 1, M):  # обрабатываем только элементы выше диагонали\n",
    "            A[i][j], A[j][i] = A[j][i], A[i][j]\n",
    "    return A\n",
    "\n",
    "matrix = [\n",
    "    [1, 2, 3],\n",
    "    [4, 5, 6],\n",
    "    [7, 8, 9]\n",
    "]\n",
    "\n",
    "print(\"Исходная матрица:\")\n",
    "for row in matrix:\n",
    "    print(row)\n",
    "\n",
    "# Транспонируем матрицу\n",
    "transposed = Transp(matrix)\n",
    "\n",
    "print(\"\\nТранспонированная матрица:\")\n",
    "for row in transposed:\n",
    "    print(row)"
   ]
