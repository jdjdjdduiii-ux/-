    "def Split (A):\n",
    "    B=[]\n",
    "    C=[]\n",
    "    for i in range (len(A)):\n",
    "        if A[i]%2==0:\n",
    "            B.append(A[i])\n",
    "        else: \n",
    "            C.append(A[i]) \n",
    "    return (B,C)\n",
    "A=[1,2,3,4,5,6,7,8]\n",
    "B,C=Split (A)\n",
    "print ('список B',B)\n",
