print(f"По убыванию: {positive_numbers}")
print()

# 4. Все четные числа по возрастанию
print("4. Все четные числа по возрастанию")
numbers = [7, 2, 9, 4, 5, 1, 8, 3, 6]
print(f"Список: {numbers}")

even_numbers = [num for num in numbers if num % 2 == 0]
even_numbers.sort()
print(f"Четные числа: {even_numbers}")
print(f"По возрастанию: {even_numbers}")
print()

# 5. Все числа больше k по убыванию
print("5. Все числа больше k по убыванию")
numbers = [3, 8, 1, 12, 5, 9, 4, 15, 7]
k = 6
print(f"Список: {numbers}")
print(f"k = {k}")

greater_than_k = [num for num in numbers if num > k]
greater_than_k.sort(reverse=True)
print(f"Числа больше {k}: {greater_than_k}")
print(f"По убыванию: {greater_than_k}")
print()

