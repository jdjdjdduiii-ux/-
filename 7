# 13. Все числа на нечетных позициях по убыванию
print("13. Все числа на нечетных позициях по убыванию")
numbers = [10, 20, 30, 40, 50, 60, 70, 80, 90]
print(f"Список: {numbers}")

odd_positions = []
for i in range(len(numbers)):
    if (i + 1) % 2 == 1:  # +1 потому что позиции с 1
        odd_positions.append(numbers[i])

odd_positions.sort(reverse=True)
print(f"Числа на нечетных позициях: {odd_positions}")
print(f"По убыванию: {odd_positions}")
print()

# 14. Все двузначные числа по возрастанию
print("14. Все двузначные числа по возрастанию")
numbers = [5, 23, 8, 45, 123, 12, 78, 3, 56, 9, 34]
print(f"Список: {numbers}")

two_digit_numbers = [num for num in numbers if 10 <= num <= 99]
two_digit_numbers.sort()
print(f"Двузначные числа: {two_digit_numbers}")
print(f"По возрастанию: {two_digit_numbers}")
print()

# 15. Все числа на четных позициях по возрастанию
print("15. Все числа на четных позициях по возрастанию")
numbers = [10, 20, 30, 40, 50, 60, 70, 80, 90]
print(f"Список: {numbers}")

even_positions = []
for i in range(len(numbers)):
    if (i + 1) % 2 == 0:  # +1 потому что позиции с 1
        even_positions.append(numbers[i])

even_positions.sort()
print(f"Числа на четных позициях: {even_positions}")
print(f"По возрастанию: {even_positions}")
print()

