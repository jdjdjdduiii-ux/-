total = sum(d.get(key_to_sum, 0) for d in dict_list)
print(f"Сумма значений по ключу '{key_to_sum}': {total}")

# Фильтрация данных учащихся
students = {
    'Иван': {'рост': 170, 'вес': 70},
    'Михаил': {'рост': 180, 'вес': 75}
}
