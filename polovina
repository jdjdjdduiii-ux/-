dict_with_empty = {1: '', 2: 'abc', 3: None, 4: [], 5: 'hello'}
cleaned_dict = {k: v for k, v in dict_with_empty.items() if v not in ['', None, []]}
print(f"После удаления пустых: {cleaned_dict}")
print()

