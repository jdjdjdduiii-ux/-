positive_numbers = [num for num in numbers if num > 0]
positive_numbers.sort(reverse=True)
print(f"Положительные числа: {positive_numbers}")
print(f"По убыванию: {positive_numbers}")
print()

# 4. Все четные числа по возрастанию
