# 1. y = 3x² + sin(x + 2)
print("1. y = 3x² + sin(x + 2)")
x = 2  # возьмем x = 2 для примера
y1 = 3*x*x + math.sin(x + 2)
print(f"Если x = {x}, то y = {y1:.2f}")
print()

# 2. y = ax² + cos(2x + 1)
print("2. y = ax² + cos(2x + 1)")
a = 3  # возьмем a = 3
x = 1  # возьмем x = 1
y2 = a*x*x + math.cos(2*x + 1)
print(f"Если a = {a} и x = {x}, то y = {y2:.2f}")
print()

# 3. y = ax + b*sin(2x + 2)
print("3. y = ax + b*sin(2x + 2)")
a = 2
b = 4
x = 1
y3 = a*x + b*math.sin(2*x + 2)
print(f"Если a = {a}, b = {b}, x = {x}, то y = {y3:.2f}")
print()

# 4. y = ax³ + cos(3x + 1)
print("4. y = ax³ + cos(3x + 1)")
a = 2
x = 1
y4 = a*x*x*x + math.cos(3*x + 1)
print(f"Если a = {a}, x = {x}, то y = {y4:.2f}")
print()

# 5. y = x²a + cos(2x - 1)
print("5. y = x²a + cos(2x - 1)")
a = 3
x = 2
y5 = x*x*a + math.cos(2*x - 1)
print(f"Если a = {a}, x = {x}, то y = {y5:.2f}")
print()

# 6. y = xa + 2x²
print("6. y = xa + 2x²")
a = 4
x = 2
y6 = x*a + 2*x*x
print(f"Если a = {a}, x = {x}, то y = {y6:.2f}")
print()

# 7. y = 3x² - 2x + 1
print("7. y = 3x² - 2x + 1")
x = 3
y7 = 3*x*x - 2*x + 1
print(f"Если x = {x}, то y = {y7:.2f}")
print()

# 8. y = 12x² - 3x + 1
print("8. y = 12x² - 3x + 1")
x = 2
y8 = 12*x*x - 3*x + 1
print(f"Если x = {x}, то y = {y8:.2f}")
print()

# 9. y = 1/(x² + 1) - a
print("9. y = 1/(x² + 1) - a")
a = 2
x = 1
y9 = 1/(x*x + 1) - a
print(f"Если a = {a}, x = {x}, то y = {y9:.2f}")
print()

# 10. y = a/(x² + 1) - cos(2x - 1)
print("10. y = a/(x² + 1) - cos(2x - 1)")
a = 3
x = 2
y10 = a/(x*x + 1) - math.cos(2*x - 1)
print(f"Если a = {a}, x = {x}, то y = {y10:.2f}")
print()

# 11. y = x³ - 2x² + 4
print("11. y = x³ - 2x² + 4")
x = 2
y11 = x*x*x - 2*x*x + 4
print(f"Если x = {x}, то y = {y11:.2f}")
print()

# 12. y = ax² + bx³ - 8
print("12. y = ax² + bx³ - 8")
a = 2
b = 3
x = 1
y12 = a*x*x + b*x*x*x - 8
print(f"Если a = {a}, b = {b}, x = {x}, то y = {y12:.2f}")
print()

# 13. y = √(ax² + 4) - b
print("13. y = √(ax² + 4) - b")
a = 3
b = 2
x = 2
y13 = math.sqrt(a*x*x + 4) - b
print(f"Если a = {a}, b = {b}, x = {x}, то y = {y13:.2f}")
print()

# 14. y = cos(2x - 1) + sin(x)
print("14. y = cos(2x - 1) + sin(x)")
x = 1
y14 = math.cos(2*x - 1) + math.sin(x)
print(f"Если x = {x}, то y = {y14:.2f}")
print()

# 15. y = a√x + bx²
print("15. y = a√x + bx²")
a = 4
b = 2
x = 9  # возьмем 9, чтобы корень был красивый
y15 = a*math.sqrt(x) + b*x*x
print(f"Если a = {a}, b = {b}, x = {x}, то y = {y15:.2f}")
print()


import math
# 1. Прямоугольный параллелепипед
print("1. Прямоугольный параллелепипед")
a = 5
b = 3
c = 4
V = a * b * c
S = 2 * (a*b + b*c + a*c)
print(f"Если a = {a}, b = {b}, c = {c}")
print(f"То объем V = {V}")
print(f"Площадь поверхности S = {S}")
print()

# 2. Длина окружности и площадь круга
print("2. Окружность и круг")
R = 7
L = 2 * math.pi * R
S_circle = math.pi * R * R
print(f"Если радиус R = {R}")
print(f"То длина окружности L = {L:.2f}")
print(f"Площадь круга S = {S_circle:.2f}")
print()

# 3. Прямоугольный треугольник
print("3. Прямоугольный треугольник")
a_triangle = 3
b_triangle = 4
c_triangle = math.sqrt(a_triangle*a_triangle + b_triangle*b_triangle)
P_triangle = a_triangle + b_triangle + c_triangle
print(f"Если катеты a = {a_triangle}, b = {b_triangle}")
print(f"То гипотенуза c = {c_triangle:.2f}")
print(f"Периметр P = {P_triangle:.2f}")
print()

# 4. Два круга и кольцо
print("4. Два круга и кольцо")
R1 = 8
R2 = 5
S1 = math.pi * R1 * R1
S2 = math.pi * R2 * R2
S3 = S1 - S2
print(f"Если радиусы R1 = {R1}, R2 = {R2}")
print(f"То площадь большого круга S1 = {S1:.2f}")
print(f"Площадь малого круга S2 = {S2:.2f}")
print(f"Площадь кольца S3 = {S3:.2f}")
print()

# 5. Прямоугольник по координатам
print("5. Прямоугольник по координатам")
x1, y1 = 1, 1
x2, y2 = 4, 5
width = abs(x2 - x1)
height = abs(y2 - y1)
P_rect = 2 * (width + height)
S_rect = width * height
print(f"Если вершины ({x1},{y1}) и ({x2},{y2})")
print(f"То ширина = {width}, высота = {height}")
print(f"Периметр P = {P_rect}")
print(f"Площадь S = {S_rect}")
print()

# 6. Расстояние между точками
print("6. Расстояние между точками")
x1, y1 = 2, 3
x2, y2 = 5, 7
distance = math.sqrt((x2-x1)**2 + (y2-y1)**2)
print(f"Если точки A({x1},{y1}) и B({x2},{y2})")
print(f"То расстояние между ними = {distance:.2f}")
print()

# 7. Треугольник по координатам вершин
print("7. Треугольник по координатам")
x1, y1 = 1, 1
x2, y2 = 4, 5
x3, y3 = 6, 2

# Находим длины сторон
a_side = math.sqrt((x2-x1)**2 + (y2-y1)**2)
b_side = math.sqrt((x3-x2)**2 + (y3-y2)**2)
c_side = math.sqrt((x1-x3)**2 + (y1-y3)**2)

P_tri = a_side + b_side + c_side
p = P_tri / 2  # полупериметр
S_tri = math.sqrt(p * (p - a_side) * (p - b_side) * (p - c_side))

print(f"Если вершины: A({x1},{y1}), B({x2},{y2}), C({x3},{y3})")
print(f"Стороны: a = {a_side:.2f}, b = {b_side:.2f}, c = {c_side:.2f}")
print(f"Периметр P = {P_tri:.2f}")
print(f"Площадь S = {S_tri:.2f}")
print()

# 8. Перевод температуры
print("8. Перевод температуры")
TF = 95  # градусов Фаренгейта
TC = (TF - 32) * 5 / 9
print(f"Если температура {TF}°F")
print(f"То в Цельсиях это {TC:.1f}°C")
print()

# 9. Стоимость конфет
print("9. Стоимость конфет")
X = 2  # кг шоколадных конфет
A = 800  # рублей
Y = 3  # кг ирисок
B = 300  # рублей

price_chocolate = A / X
price_caramel = B / Y
ratio = price_chocolate / price_caramel

print(f"Шоколадные: {X} кг за {A} руб")
print(f"Ириски: {Y} кг за {B} руб")
print(f"1 кг шоколадных = {price_chocolate:.1f} руб")
print(f"1 кг ирисок = {price_caramel:.1f} руб")
print(f"Шоколадные дороже в {ratio:.1f} раз")
print()

# 10. Система уравнений
print("10. Система уравнений")
A1, B1, C1 = 2, 3, 7
A2, B2, C2 = 1, -1, 1

D = A1 * B2 - A2 * B1
x = (C1 * B2 - C2 * B1) / D
y = (A1 * C2 - A2 * C1) / D

print(f"Система: {A1}x + {B1}y = {C1}")
print(f"         {A2}x + {B2}y = {C2}")
print(f"Решение: x = {x}, y = {y}")
print()

# 11. Перевод угла в радианы
print("11. Перевод угла в радианы")
alpha_degrees = 60
alpha_radians = alpha_degrees * math.pi / 180
print(f"Угол {alpha_degrees}°")
print(f"В радианах = {alpha_radians:.2f}")
print()

# 12. Расстояние между автомобилями
print("12. Автомобили")
V1 = 60  # км/ч
V2 = 80  # км/ч
S_start = 100  # км
T = 2  # часов

S_end = S_start + (V1 + V2) * T
print(f"Скорости: {V1} км/ч и {V2} км/ч")
print(f"Начальное расстояние: {S_start} км")
print(f"Через {T} часов расстояние = {S_end} км")
print()

# 13. Отрезки на числовой оси
print("13. Отрезки на числовой оси")
A = 2
B = 7
C = 5

AC = abs(C - A)
BC = abs(C - B)
sum_AC_BC = AC + BC

print(f"Точки: A={A}, B={B}, C={C}")
print(f"Длина AC = {AC}")
print(f"Длина BC = {BC}")
print(f"Сумма длин = {sum_AC_BC}")
print()

# 14. Операции с квадратами чисел
print("14. Операции с квадратами")
num1 = 4
num2 = 3

sum_squares = num1*num1 + num2*num2
diff_squares = num1*num1 - num2*num2
prod_squares = (num1*num1) * (num2*num2)
div_squares = (num1*num1) / (num2*num2)

print(f"Числа: {num1} и {num2}")
print(f"Сумма квадратов = {sum_squares}")
print(f"Разность квадратов = {diff_squares}")
print(f"Произведение квадратов = {prod_squares}")
print(f"Частное квадратов = {div_squares:.2f}")
print()

# 15. Путь лодки
print("15. Путь лодки")
V = 12  # км/ч - скорость лодки
U = 3   # км/ч - скорость течения
T1 = 2  # часов - по озеру
T2 = 3  # часов - против течения

path_lake = V * T1
path_river = (V - U) * T2
total_path = path_lake + path_river

print(f"Скорость лодки: {V} км/ч")
print(f"Скорость течения: {U} км/ч")
print(f"По озеру: {T1} часов = {path_lake} км")
print(f"Против течения: {T2} часов = {path_river} км")
print(f"Общий путь: {total_path} км")
print()


import math

# 1. Функция 1
print("1. y = { ax² + 1, если x > 0; ax - 1, если x ≤ 0 }")
a = 2
x = 3
if x > 0:
    y = a * x * x + 1
else:
    y = a * x - 1
print(f"При a = {a}, x = {x}: y = {y}")
print()

# 2. Функция 2
print("2. y = { ax + 1, если x ≥ 1; x² - 1, если x < 1 }")
a = 3
x = 2
if x >= 1:
    y = a * x + 1
else:
    y = x * x - 1
print(f"При a = {a}, x = {x}: y = {y}")
print()

# 3. Функция 3
print("3. y = { 3a², если x < 0; 4ax - 1, если x ≥ 0 }")
a = 2
x = -1
if x < 0:
    y = 3 * a * a
else:
    y = 4 * a * x - 1
print(f"При a = {a}, x = {x}: y = {y}")
print()

# 4. Функция 4
print("4. y = { 2a², если x > 4; 3x - 1, если x ≤ 4 }")
a = 3
x = 5
if x > 4:
    y = 2 * a * a
else:
    y = 3 * x - 1
print(f"При a = {a}, x = {x}: y = {y}")
print()

# 5. Функция 5
print("5. y = { 2ax - 2, если x > 2; 3a² - 2x, если x ≤ 2 }")
a = 2
x = 3
if x > 2:
    y = 2 * a * x - 2
else:
    y = 3 * a * a - 2 * x
print(f"При a = {a}, x = {x}: y = {y}")
print()

# 6. Функция 6
print("6. y = { 2ax² - 1, если x > 1; x, если x ≤ 1 }")
a = 4
x = 2
if x > 1:
    y = 2 * a * x * x - 1
else:
    y = x
print(f"При a = {a}, x = {x}: y = {y}")
print()

# 7. Функция 7
print("7. y = { x², если x > 2; 2a - 1, если x ≤ 2 }")
a = 5
x = 3
if x > 2:
    y = x * x
else:
    y = 2 * a - 1
print(f"При a = {a}, x = {x}: y = {y}")
print()

# 8. Функция 8
print("8. y = { cos(2x - 1), если x > 2; sin(3x + 1), если x ≤ 2 }")
x = 1
if x > 2:
    y = math.cos(2 * x - 1)
else:
    y = math.sin(3 * x + 1)
print(f"При x = {x}: y = {y:.2f}")
print()

# 9. Функция 9
print("9. y = { 2x³ - 2x - 1, если x > 2; 3x² - 2x + 1, если x ≤ 2 }")
x = 3
if x > 2:
    y = 2 * x * x * x - 2 * x - 1
else:
    y = 3 * x * x - 2 * x + 1
print(f"При x = {x}: y = {y}")
print()

# 10. Функция 10
print("10. y = { 2ax² - 1, если x > 1; 1/a, если x ≤ 1 }")
a = 2
x = 0.5
if x > 1:
    y = 2 * a * x * x - 1
else:
    y = 1 / a
print(f"При a = {a}, x = {x}: y = {y}")
print()

# 11. Функция 11
print("11. y = { √(ax) + 1, если x ≥ 0; ax - 1, если x < 0 }")
a = 4
x = 9
if x >= 0:
    y = math.sqrt(a * x) + 1
else:
    y = a * x - 1
print(f"При a = {a}, x = {x}: y = {y:.2f}")
print()

# 12. Функция 12
print("12. y = { √x + a, если x ≥ 0; a/x - 1, если x < 0 }")
a = 3
x = 16
if x >= 0:
    y = math.sqrt(x) + a
else:
    y = a / x - 1
print(f"При a = {a}, x = {x}: y = {y:.2f}")
print()

# 13. Функция 13
print("13. y = { 1/x + a, если x > 0; x² - 1, если x ≤ 0 }")
a = 2
x = 4
if x > 0:
    y = 1 / x + a
else:
    y = x * x - 1
print(f"При a = {a}, x = {x}: y = {y:.2f}")
print()

# 14. Функция 14
print("14. y = { cos x, если x > π/2; sin x, если x ≤ π/2 }")
x = math.pi / 4  # 45 градусов
if x > math.pi / 2:
    y = math.cos(x)
else:
    y = math.sin(x)
print(f"При x = π/4: y = {y:.2f}")
print()

# 15. Функция 15
print("15. y = { √(x - 2), если x > 2; (x - 2)² + 1, если x ≤ 2 }")
x = 6
if x > 2:
    y = math.sqrt(x - 2)
else:
    y = (x - 2) ** 2 + 1
print(f"При x = {x}: y = {y:.2f}")
print()


# 1. Вывести N раз число K
print("1. Вывести N раз число K")
K = 7
N = 5
print(f"K = {K}, N = {N}")
for i in range(N):
    print(K, end=" ")
print("\n")

# 2. Числа от A до B в порядке возрастания (включая A и B)
print("2. Числа от A до B в порядке возрастания")
A = 3
B = 8
print(f"A = {A}, B = {B}")
count = 0
for i in range(A, B + 1):
    print(i, end=" ")
    count += 1
print(f"\nКоличество чисел: {count}")
print()

# 3. Числа от A до B в порядке убывания (не включая A и B)
print("3. Числа от A до B в порядке убывания")
A = 2
B = 9
print(f"A = {A}, B = {B}")
count = 0
for i in range(B - 1, A, -1):
    print(i, end=" ")
    count += 1
print(f"\nКоличество чисел: {count}")
print()

# 4. Таблица стоимости товара
print("4. Таблица стоимости товара")
price = 20.4
print(f"Цена за 1 шт: {price} руб")
print("Количество | Стоимость")
for i in range(1, 11):
    cost = i * price
    print(f"{i:9} | {cost:8.1f} руб")
print()

# 5. Квадраты чисел от A до B с шагом H
print("5. Квадраты чисел от A до B с шагом H")
A = 1
B = 10
H = 2
print(f"A = {A}, B = {B}, H = {H}")
for i in range(A, B + 1, H):
    square = i * i
    print(f"{i}² = {square}")
print()

# 6. Положительные числа от A до B с шагом H
print("6. Положительные числа от A до B с шагом H")
A = -5
B = 8
H = 2
print(f"A = {A}, B = {B}, H = {H}")
print("Положительные числа:")
for i in range(A, B + 1, H):
    if i > 0:
        print(i, end=" ")
print("\n")

# 7. Сумма чисел от A до B
print("7. Сумма чисел от A до B")
A = 1
B = 5
print(f"A = {A}, B = {B}")
total = 0
for i in range(A, B + 1):
    total += i
print(f"Сумма = {total}")
print()

# 8. Произведение чисел от A до B
print("8. Произведение чисел от A до B")
A = 1
B = 5
print(f"A = {A}, B = {B}")
product = 1
for i in range(A, B + 1):
    product *= i
print(f"Произведение = {product}")
print()

# 9. Сумма квадратов чисел от A до B
print("9. Сумма квадратов чисел от A до B")
A = 1
B = 3
print(f"A = {A}, B = {B}")
sum_squares = 0
for i in range(A, B + 1):
    sum_squares += i * i
print(f"Сумма квадратов = {sum_squares}")
print()

# 10. Стоимость конфет от 1.2 до 2 кг
print("10. Стоимость конфет")
price_per_kg = 150.5
print(f"Цена за 1 кг: {price_per_kg} руб")
print("Вес (кг) | Стоимость")
weight = 1.2
while weight <= 2:
    cost = weight * price_per_kg
    print(f"{weight:7.1f} | {cost:8.1f} руб")
    weight += 0.2
print()

# 11. Квадрат числа как сумма нечетных чисел
print("11. Квадрат числа как сумма нечетных чисел")
N = 5
print(f"N = {N}")
square = 0
for i in range(1, 2 * N, 2):
    square += i
    print(f"+{i}", end=" ")
print(f"= {square}")
print(f"Проверка: {N}² = {N * N}")
print()

# 12. Степени числа A от 1 до N
print("12. Степени числа A от 1 до N")
A = 2
N = 5
print(f"A = {A}, N = {N}")
for i in range(1, N + 1):
    power = A ** i
    print(f"{A}^{i} = {power}")
print()

# 13. Наибольшее K, где K² ≤ N
print("13. Наибольшее K, где K² ≤ N")
N = 20
print(f"N = {N}")
K = 0
while (K + 1) ** 2 <= N:
    K += 1
print(f"K = {K}, т.к. {K}² = {K*K} ≤ {N}")
print()

# 14. Наибольшее K, где 3K < N
print("14. Наибольшее K, где 3K < N")
N = 20
print(f"N = {N}")
K = 0
while 3 * (K + 1) < N:
    K += 1
print(f"K = {K}, т.к. 3×{K} = {3*K} < {N}")
print()

# 15. Разбиение отрезка на N равных частей
print("15. Разбиение отрезка на N равных частей")
N = 5
A = 0
B = 10
print(f"A = {A}, B = {B}, N = {N}")
H = (B - A) / N
print(f"Длина каждого отрезка H = {H:.1f}")
print("Точки разбиения:")
for i in range(N + 1):
    point = A + i * H
    print(f"{point:.1f}", end=" ")
print("\n")


import math
# 1. Сумма 1/2 + 1/2² + 1/2³ + ... + 1/2ⁿ
print("1. Сумма: 1/2 + 1/2² + 1/2³ + ... + 1/2ⁿ")
n = 5
total = 0
for i in range(1, n + 1):
    term = 1 / (2 ** i)
    total += term
    print(f"1/2^{i} = {term:.4f}")
print(f"Общая сумма: {total:.4f}")
print()

# 2. Сумма: cos(x)/1 + cos(2x)/2 + ... + cos(nx)/n
print("2. Сумма: cos(x)/1 + cos(2x)/2 + ... + cos(nx)/n")
n = 4
x = math.pi / 4
total = 0
for i in range(1, n + 1):
    term = math.cos(i * x) / i
    total += term
    print(f"cos({i}*π/4)/{i} = {term:.4f}")
print(f"Общая сумма: {total:.4f}")
print()

# 3. Сумма: 1 - 3 + 3² - 3³ + ... + (-1)ⁿ·3ⁿ
print("3. Сумма: 1 - 3 + 3² - 3³ + ... + (-1)ⁿ·3ⁿ")
n = 4
total = 0
for i in range(n + 1):
    term = ((-1) ** i) * (3 ** i)
    total += term
    print(f"{' - ' if i % 2 == 1 and i > 0 else ' + ' if i > 0 else ''}{3 ** i}", end="")
print(f" = {total}")
print()

# 4. Сумма: 1/sin(1) + 1/sin(2) + ... + 1/sin(n)
print("4. Сумма: 1/sin(1) + 1/sin(2) + ... + 1/sin(n)")
n = 3
total = 0
for i in range(1, n + 1):
    term = 1 / math.sin(i)
    total += term
    print(f"1/sin({i}) = {term:.4f}")
print(f"Общая сумма: {total:.4f}")
print()

# 5. Сумма: 1 - 2³ + 3³ - ... + (-1)ⁿ⁺¹·n³
print("5. Сумма: 1 - 2³ + 3³ - ... + (-1)ⁿ⁺¹·n³")
n = 4
total = 0
for i in range(1, n + 1):
    term = ((-1) ** (i + 1)) * (i ** 3)
    total += term
    sign = "+" if ((-1) ** (i + 1)) > 0 else "-"
    print(f"{sign} {i}³", end=" ")
print(f"= {total}")
print()

# 6. Сумма: cos(1) - cos(2) + cos(3) - ... + (-1)ⁿ⁺¹·cos(n)
print("6. Сумма: cos(1) - cos(2) + cos(3) - ... + (-1)ⁿ⁺¹·cos(n)")
n = 4
total = 0
for i in range(1, n + 1):
    term = ((-1) ** (i + 1)) * math.cos(i)
    total += term
    sign = "+" if ((-1) ** (i + 1)) > 0 else "-"
    print(f"{sign} cos({i})", end=" ")
print(f"= {total:.4f}")
print()

# 7. Сумма: x - x²/2 + x³/3 - ... + (-1)ⁿ⁻¹·xⁿ/n
print("7. Сумма: x - x²/2 + x³/3 - ... + (-1)ⁿ⁻¹·xⁿ/n")
n = 5
x = 0.5
total = 0
for i in range(1, n + 1):
    term = ((-1) ** (i - 1)) * (x ** i) / i
    total += term
    print(f"{' - ' if i % 2 == 0 and i > 1 else ' + ' if i > 1 else ''}{x}^{i}/{i}", end="")
print(f" = {total:.4f}")
print()

# 8. Сумма: 1! - 2! + 3! - ... + (-1)ⁿ⁺¹·n!
print("8. Сумма: 1! - 2! + 3! - ... + (-1)ⁿ⁺¹·n!")
n = 4
total = 0
for i in range(1, n + 1):
    factorial = math.factorial(i)
    term = ((-1) ** (i + 1)) * factorial
    total += term
    sign = "+" if ((-1) ** (i + 1)) > 0 else "-"
    print(f"{sign} {i}!", end=" ")
print(f"= {total}")
print()

# 9. Сумма: sin(x) + sin(x²) + sin(x³) + ... + sin(xⁿ)
print("9. Сумма: sin(x) + sin(x²) + sin(x³) + ... + sin(xⁿ)")
n = 4
x = math.pi / 6
total = 0
for i in range(1, n + 1):
    term = math.sin(x ** i)
    total += term
    print(f"sin((π/6)^{i}) = {term:.4f}")
print(f"Общая сумма: {total:.4f}")
print()

# 10. Сумма: 1 + 1/2! + 1/3! + ... + 1/n!
print("10. Сумма: 1 + 1/2! + 1/3! + ... + 1/n!")
n = 5
total = 0
for i in range(1, n + 1):
    term = 1 / math.factorial(i)
    total += term
    print(f"1/{i}! = {term:.6f}")
print(f"Общая сумма: {total:.6f}")
print()

# 11. Сумма: n² + (n+1)² + (n+2)² + ... + (2n)²
print("11. Сумма: n² + (n+1)² + (n+2)² + ... + (2n)²")
n = 3
total = 0
for i in range(n, 2 * n + 1):
    term = i ** 2
    total += term
    print(f"{i}²", end=" + " if i < 2 * n else "")
print(f" = {total}")
print()

# 12. Сумма: 1! + 2! + 3! + ... + n!
print("12. Сумма: 1! + 2! + 3! + ... + n!")
n = 4
total = 0
for i in range(1, n + 1):
    factorial = math.factorial(i)
    total += factorial
    print(f"{i}!", end=" + " if i < n else "")
print(f" = {total}")
print()

# 13. Сумма: 1 + x + x²/2! + x³/3! + ... + xⁿ/n!
print("13. Сумма: 1 + x + x²/2! + x³/3! + ... + xⁿ/n!")
n = 4
x = 1
total = 0
for i in range(n + 1):
    if i == 0:
        term = 1
    else:
        term = (x ** i) / math.factorial(i)
    total += term
    if i == 0:
        print("1", end="")
    else:
        print(f" + {x}^{i}/{i}!", end="")
print(f" = {total:.4f}")
print()

# 14. Сумма: 1 - x + x² - x³ + ... + (-1)ⁿ·xⁿ
print("14. Сумма: 1 - x + x² - x³ + ... + (-1)ⁿ·xⁿ")
n = 4
x = 0.5
total = 0
for i in range(n + 1):
    term = ((-1) ** i) * (x ** i)
    total += term
    if i == 0:
        print("1", end="")
    else:
        sign = " - " if i % 2 == 1 else " + "
        print(f"{sign}{x}^{i}", end="")
print(f" = {total:.4f}")
print()

# 15. Сумма: x - x³/3 + x⁵/5 - ... + (-1)ⁿ·x²ⁿ⁺¹/(2n+1)
print("15. Сумма: x - x³/3 + x⁵/5 - ... + (-1)ⁿ·x²ⁿ⁺¹/(2n+1)")
n = 4
x = 0.5
total = 0
for i in range(n + 1):
    term = ((-1) ** i) * (x ** (2 * i + 1)) / (2 * i + 1)
    total += term
    if i == 0:
        print(f"{x}", end="")
    else:
        sign = " - " if i % 2 == 1 else " + "
        print(f"{sign}{x}^{2*i+1}/{2*i+1}", end="")
print(f" = {total:.6f}")
print()



import math
# 1. Среднее арифметическое элементов с номерами от K до L
print("1. Среднее арифметическое элементов с номерами от K до L")
numbers = [10, 20, 30, 40, 50, 60, 70]
K = 2
L = 5
print(f"Список: {numbers}")
print(f"K = {K}, L = {L}")

selected_numbers = numbers[K-1:L]  # K-1 потому что индексы с 0
average = sum(selected_numbers) / len(selected_numbers)
print(f"Элементы с {K} по {L}: {selected_numbers}")
print(f"Среднее арифметическое: {average:.2f}")
print()

# 2. Сумма всех элементов, кроме элементов с K по L
print("2. Сумма всех элементов, кроме элементов с K по L")
numbers = [10, 20, 30, 40, 50, 60, 70]
K = 3
L = 5
print(f"Список: {numbers}")
print(f"K = {K}, L = {L}")

# Берем элементы до K и после L
sum_total = sum(numbers[:K-1]) + sum(numbers[L:])
print(f"Элементы кроме {K}-{L}: {numbers[:K-1]} + {numbers[L:]}")
print(f"Сумма: {sum_total}")
print()

# 3. Среднее арифметическое всех элементов, кроме элементов с K по L
print("3. Среднее арифметическое всех элементов, кроме элементов с K по L")
numbers = [10, 20, 30, 40, 50, 60, 70]
K = 2
L = 4
print(f"Список: {numbers}")
print(f"K = {K}, L = {L}")

remaining_numbers = numbers[:K-1] + numbers[L:]
average = sum(remaining_numbers) / len(remaining_numbers)
print(f"Элементы кроме {K}-{L}: {remaining_numbers}")
print(f"Среднее арифметическое: {average:.2f}")
print()

# 4. Четные числа по возрастанию индексов, нечетные по убыванию
print("4. Четные и нечетные числа в разном порядке")
numbers = [1, 2, 3, 4, 5, 6, 7, 8]
print(f"Список: {numbers}")

even_numbers = []
odd_numbers = []

for i, num in enumerate(numbers):
    if num % 2 == 0:
        even_numbers.append(num)
    else:
        odd_numbers.append(num)

print("Четные числа (по возрастанию индексов):", even_numbers)
print("Нечетные числа (по убыванию индексов):", odd_numbers[::-1])
print()

# 5. Элементы с четными и нечетными номерами
print("5. Элементы с четными и нечетными номерами")
numbers = [10, 20, 30, 40, 50, 60, 70, 80]
print(f"Список: {numbers}")

even_index = []
odd_index = []

for i in range(len(numbers)):
    if (i + 1) % 2 == 0:  # i+1 потому что номера с 1
        even_index.append(numbers[i])
    else:
        odd_index.append(numbers[i])

print("Элементы с четными номерами:", even_index)
print("Элементы с нечетными номерами:", odd_index)
print()

# 6. Произведение элементов справа от максимального
print("6. Произведение элементов справа от максимального")
numbers = [3, 7, 2, 9, 5, 4, 8]
print(f"Список: {numbers}")

max_index = numbers.index(max(numbers))
print(f"Максимальный элемент: {numbers[max_index]} на позиции {max_index + 1}")

if max_index < len(numbers) - 1:
    right_elements = numbers[max_index + 1:]
    product = math.prod(right_elements)
    print(f"Элементы справа: {right_elements}")
    print(f"Произведение: {product}")
else:
    print("Максимальный элемент последний, справа элементов нет")
print()

# 7. Сумма между минимальным и максимальным элементами
print("7. Сумма между минимальным и максимальным элементами")
numbers = [3, 7, 2, 9, 5, 4, 8]
print(f"Список: {numbers}")

min_index = numbers.index(min(numbers))
max_index = numbers.index(max(numbers))

start = min(min_index, max_index)
end = max(min_index, max_index)

between_elements = numbers[start:end + 1]
total_sum = sum(between_elements)

print(f"Минимальный: {numbers[min_index]}, максимальный: {numbers[max_index]}")
print(f"Элементы между ними: {between_elements}")
print(f"Сумма: {total_sum}")
print()

# 8. Обнулить элементы между минимальным и максимальным
print("8. Обнулить элементы между минимальным и максимальным")
numbers = [3, 7, 2, 9, 5, 4, 8]
print(f"Исходный список: {numbers}")

min_index = numbers.index(min(numbers))
max_index = numbers.index(max(numbers))

start = min(min_index, max_index) + 1
end = max(min_index, max_index)

for i in range(start, end):
    numbers[i] = 0

print(f"После обнуления: {numbers}")
print()

# 9. Увеличить четные числа на заданное число
print("9. Увеличить четные числа на заданное число")
numbers = [1, 2, 3, 4, 5, 6, 7, 8]
increase_by = 10
print(f"Исходный список: {numbers}")
print(f"Увеличиваем на: {increase_by}")

has_even = False
for i in range(len(numbers)):
    if numbers[i] % 2 == 0:
        numbers[i] += increase_by
        has_even = True

if has_even:
    print(f"После увеличения: {numbers}")
else:
    print("Четных чисел нет, список без изменений")
print()

# 10. Обнулить нечетные числа
print("10. Обнулить нечетные числа")
numbers = [1, 2, 3, 4, 5, 6, 7, 8]
print(f"Исходный список: {numbers}")

has_odd = False
for i in range(len(numbers)):
    if numbers[i] % 2 == 1:
        numbers[i] = 0
        has_odd = True

if has_odd:
    print(f"После обнуления: {numbers}")
else:
    print("Нечетных чисел нет, список без изменений")
print()

# 11. Минимальный элемент с четными номерами
print("11. Минимальный элемент с четными номерами")
numbers = [10, 5, 8, 3, 12, 7, 9, 4]
print(f"Список: {numbers}")

even_index_numbers = []
for i in range(1, len(numbers), 2):  # индексы 1, 3, 5... (номера 2, 4, 6...)
    even_index_numbers.append(numbers[i])

if even_index_numbers:
    min_even = min(even_index_numbers)
    print(f"Элементы с четными номерами: {even_index_numbers}")
    print(f"Минимальный: {min_even}")
else:
    print("Нет элементов с четными номерами")
print()

# 12. Элементы больше правого соседа
print("12. Элементы больше правого соседа")
numbers = [5, 3, 8, 6, 4, 9, 2, 7]
print(f"Список: {numbers}")

greater_indices = []
count = 0

for i in range(len(numbers) - 1):
    if numbers[i] > numbers[i + 1]:
        greater_indices.append(i + 1)  # +1 для номера (не индекса)
        count += 1

print(f"Номера элементов больше правого соседа: {greater_indices}")
print(f"Количество таких элементов: {count}")
print()

# 13. Два соседних элемента с максимальной суммой
print("13. Два соседних элемента с максимальной суммой")
numbers = [3, 7, 2, 9, 5, 4, 8]
print(f"Список: {numbers}")

max_sum = 0
max_pair = (0, 0)

for i in range(len(numbers) - 1):
    current_sum = numbers[i] + numbers[i + 1]
    if current_sum > max_sum:
        max_sum = current_sum
        max_pair = (numbers[i], numbers[i + 1])

print(f"Пара с максимальной суммой: {max_pair}")
print(f"Их сумма: {max_sum}")
print()

# 14. Поменять местами минимальный и максимальный элементы
print("14. Поменять местами минимальный и максимальный элементы")
numbers = [3, 7, 2, 9, 5, 4, 8]
print(f"Исходный список: {numbers}")

min_index = numbers.index(min(numbers))
max_index = numbers.index(max(numbers))

numbers[min_index], numbers[max_index] = numbers[max_index], numbers[min_index]

print(f"После замены: {numbers}")
print(f"Поменяли местами элементы на позициях {min_index + 1} и {max_index + 1}")
print()

# 15. Список где каждый следующий равен сумме предыдущих
print("15. Список где каждый следующий равен сумме предыдущих")
N = 6
A = 2
B = 3
print(f"N = {N}, A = {A}, B = {B}")

result = [A, B]
for i in range(2, N):
    next_element = sum(result)
    result.append(next_element)

print(f"Полученный список: {result}")
print()



print("1. Все нечетные числа по убыванию")
numbers = [7, 2, 9, 4, 5, 1, 8, 3, 6]
print(f"Список: {numbers}")

odd_numbers = [num for num in numbers if num % 2 == 1]
odd_numbers.sort(reverse=True)
print(f"Нечетные числа: {odd_numbers}")
print(f"По убыванию: {odd_numbers}")
print()

# 2. Все положительные числа по возрастанию
print("2. Все положительные числа по возрастанию")
numbers = [5, -2, 8, -1, 3, -7, 4, -9, 6]
print(f"Список: {numbers}")

positive_numbers = [num for num in numbers if num > 0]
positive_numbers.sort()
print(f"Положительные числа: {positive_numbers}")
print(f"По возрастанию: {positive_numbers}")
print()

# 3. Все положительные числа по убыванию
print("3. Все положительные числа по убыванию")
