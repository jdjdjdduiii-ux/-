# 5. Все числа больше k по убыванию
print("5. Все числа больше k по убыванию")
numbers = [3, 8, 1, 12, 5, 9, 4, 15, 7]
k = 6
print(f"Список: {numbers}")
print(f"k = {k}")

greater_than_k = [num for num in numbers if num > k]
greater_than_k.sort(reverse=True)
print(f"Числа больше {k}: {greater_than_k}")
print(f"По убыванию: {greater_than_k}")
print()

