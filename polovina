# 14. Выделение имени файла без расширения
print("14. Выделение имени файла без расширения")
file_path = r"d:\ivanov\primer\prog.py"
print(f"Полный путь: '{file_path}'")

# Разделяем путь по обратным слешам
parts = file_path.split('\\')
# Берем последнюю часть (имя файла с расширением)
filename_with_ext = parts[-1]
# Разделяем имя файла и расширение
filename = filename_with_ext.split('.')[0]

print(f"Имя файла без расширения: '{filename}'")
print()

# 15. Самое длинное слово (последнее из самых длинных)
print("15. Самое длинное слово (последнее из самых длинных)")
s = "кот собака слон жираф антилопа бегемот"
print(f"Строка: '{s}'")
words = s.split()

max_length = 0
longest_word = ""

for word in words:
    if len(word) >= max_length:
        max_length = len(word)
        longest_word = word

print(f"Самое длинное слово: '{longest_word}'")
print(f"Его длина: {max_length}")
print()




print("1. Подсчет частоты символов")
s = "программирование"
print(f"Строка: '{s}'")
char_count = {}
for char in s:
    char_count[char] = char_count.get(char, 0) + 1

print("Частота символов:")
for char, count in char_count.items():
    print(f"  '{char}': {count}")
print()

# 2. Первые два и последние два символа
print("2. Первые два и последние два символа")
s = "программирование"
print(f"Строка: '{s}'")
if len(s) >= 2:
    result = s[:2] + s[-2:]
    print(f"Результат: '{result}'")
else:
    print("Длина строки меньше двух символов")
print()

# 3. Замена первого символа на $ (кроме самого первого)
print("3. Замена первого символа на $ (кроме самого первого)")
s = "программирование программиста"
print(f"Строка: '{s}'")
first_char = s[0]
result = first_char + s[1:].replace(first_char, '$')
print(f"Результат: '{result}'")
print()

# 4. Обмен первыми двумя символами двух строк
print("4. Обмен первыми двумя символами двух строк")
s1 = "привет"
s2 = "мир"
print(f"Строка 1: '{s1}'")
print(f"Строка 2: '{s2}'")

if len(s1) >= 2 and len(s2) >= 2:
    new_s1 = s2[:2] + s1[2:]
    new_s2 = s1[:2] + s2[2:]
    result = new_s1 + " " + new_s2
    print(f"Результат: '{result}'")
else:
    print("Одна из строк слишком короткая")
print()

# 5. Добавление ing/ly
print("5. Добавление ing/ly")
s = "read"
print(f"Строка: '{s}'")
if len(s) >= 3:
    if s.endswith('ing'):
        result = s + 'ly'
    else:
        result = s + 'ing'
    print(f"Результат: '{result}'")
else:
    print(f"Строка слишком короткая: '{s}'")
print()

# 6. Удаление каждого n-го символа
print("6. Удаление каждого n-го символа")
s = "программирование"
n = 3
print(f"Строка: '{s}'")
print(f"n = {n}")
result = ""
for i in range(len(s)):
    if (i + 1) % n != 0:  # i+1 потому что начинаем с первого символа
        result += s[i]
print(f"Результат: '{result}'")
print()

# 7. Поменять местами первый и последний символы
print("7. Поменять местами первый и последний символы")
s = "программирование"
print(f"Строка: '{s}'")
if len(s) > 1:
    result = s[-1] + s[1:-1] + s[0]
    print(f"Результат: '{result}'")
else:
    print(f"Строка слишком короткая: '{s}'")
print()

# 8. Удалить символы с нечетными индексами
print("8. Удалить символы с нечетными индексами")
s = "программирование"
print(f"Строка: '{s}'")
result = ""
for i in range(len(s)):
    if i % 2 == 0:  # четные индексы (0, 2, 4...)
        result += s[i]
print(f"Результат: '{result}'")
print()

# 9. Подсчет вхождений слов
print("9. Подсчет вхождений слов")
s = "кот собака кот птица собака кот"
print(f"Предложение: '{s}'")
words = s.split()
word_count = {}
for word in words:
    word_count[word] = word_count.get(word, 0) + 1

print("Количество вхождений слов:")
for word, count in word_count.items():
    print(f"  '{word}': {count}")
print()

# 10. Перевернуть строку, если длина кратна 4
print("10. Перевернуть строку, если длина кратна 4")
s = "программирование"  # 16 символов
print(f"Строка: '{s}'")
print(f"Длина строки: {len(s)}")
if len(s) % 4 == 0:
    result = s[::-1]
    print(f"Результат: '{result}'")
else:
    print("Длина строки не кратна 4")
print()

# 11. Верхний регистр, если в первых 4 символах >= 2 заглавных
print("11. Верхний регистр, если в первых 4 символах >= 2 заглавных")
s = "ПроГраммирование"
print(f"Строка: '{s}'")
first_four = s[:4]
upper_count = sum(1 for char in first_four if char.isupper())
print(f"Заглавных букв в первых 4 символах: {upper_count}")

if upper_count >= 2:
    result = s.upper()
    print(f"Результат: '{result}'")
else:
    print("Недостаточно заглавных букв в начале")
print()

# 12. Шифрование циклической заменой букв
print("12. Шифрование циклической заменой букв")
s = "Hello World! zZ"
print(f"Строка: '{s}'")

result = ""
for char in s:
    if char.isalpha():
        if char.islower():
            # Для 'z' переходим к 'a'
            result += chr((ord(char) - ord('a') + 1) % 26 + ord('a'))
        else:
            # Для 'Z' переходим к 'A'
            result += chr((ord(char) - ord('A') + 1) % 26 + ord('A'))
    else:
        result += char

print(f"Зашифрованная строка: '{result}'")
print()

# 13. Первый неповторяющийся символ
print("13. Первый неповторяющийся символ")
s = "программирование"
print(f"Строка: '{s}'")

char_count = {}
for char in s:
    char_count[char] = char_count.get(char, 0) + 1

found = None
for char in s:
    if char_count[char] == 1:
        found = char
        break

if found:
    print(f"Первый неповторяющийся символ: '{found}'")
else:
    print("Все символы повторяются")
print()

# 14. Верхний регистр для первой и последней буквы каждого слова
print("14. Верхний регистр для первой и последней буквы каждого слова")
s = "привет мир программирование"
print(f"Строка: '{s}'")

words = s.split()
result_words = []
for word in words:
    if len(word) > 1:
        new_word = word[0].upper() + word[1:-1] + word[-1].upper()
    else:
        new_word = word.upper()
    result_words.append(new_word)

result = ' '.join(result_words)
print(f"Результат: '{result}'")
print()

# 15. Проверка упорядоченности букв по алфавиту
print("15. Проверка упорядоченности букв по алфавиту")
s = "abcde123"  # упорядоченная строка
# s = "abdce123"  # неупорядоченная строка
print(f"Строка: '{s}'")

# Извлекаем только буквы
letters = [char for char in s if char.isalpha()]

if len(letters) < 2:
    print("0 (мало букв для проверки)")
else:
    # Проверяем упорядоченность
    is_ordered = True
    first_wrong_index = -1
    
    for i in range(len(letters) - 1):
        if letters[i] > letters[i + 1]:
            is_ordered = False
            # Находим позицию в исходной строке
            for j in range(len(s)):
                if s[j] == letters[i + 1]:
                    first_wrong_index = j + 1
                    break
            break
    
    if is_ordered:
        print("0 (буквы упорядочены по алфавиту)")
    else:
        print(f"Позиция первого нарушения: {first_wrong_index}")
print()


import itertools
print("1. Сортировка словаря по значениям")
my_dict = {1: 2, 3: 4, 4: 3, 2: 1, 0: 0}
print(f"Исходный словарь: {my_dict}")

# Сортировка по возрастанию значений
sorted_asc = dict(sorted(my_dict.items(), key=lambda item: item[1]))
print(f"По возрастанию: {sorted_asc}")

# Сортировка по убыванию значений
sorted_desc = dict(sorted(my_dict.items(), key=lambda item: item[1], reverse=True))
print(f"По убыванию: {sorted_desc}")

# Объединение словарей с суммированием значений
dict1 = {1: 2, 3: 4}
dict2 = {3: 5, 6: 7}
merged_dict = dict1.copy()
for key, value in dict2.items():
    merged_dict[key] = merged_dict.get(key, 0) + value
print(f"Объединенный словарь: {merged_dict}")

# Проверка наличия ключей
keys_to_check = [1, 3]
all_present = all(key in my_dict for key in keys_to_check)
print(f"Все ключи {keys_to_check} присутствуют: {all_present}")
print()

# 2. Работа с уникальными значениями и подсчет элементов
print("2. Работа с уникальными значениями")
my_dict = {1: 2, 3: 4}
print(f"Исходный словарь: {my_dict}")

# Добавление нового ключа
my_dict[5] = 6
print(f"После добавления ключа 5: {my_dict}")

# Уникальные значения
dict_with_duplicates = {1: 2, 3: 4, 5: 2}
unique_values = set(dict_with_duplicates.values())
print(f"Уникальные значения: {unique_values}")

# Подсчет элементов в списках-значениях
dict_with_lists = {1: [2, 3, 4], 3: [5, 6, 7], 5: [8, 9, 0]}
total_elements = sum(len(lst) for lst in dict_with_lists.values())
print(f"Всего элементов в списках: {total_elements}")
print()

# 3. Объединение словарей и очистка списков
print("3. Объединение словарей")
dicts_to_merge = [{1: 2}, {3: 4}, {5: 6}]
merged = {}
for d in dicts_to_merge:
    merged.update(d)
print(f"Объединенный словарь: {merged}")

# Очистка списков в словаре
dict_with_lists = {1: [2, 3, 4], 3: [5, 6, 7], 5: [8, 9, 0]}
for key in dict_with_lists:
    dict_with_lists[key] = []
print(f"После очистки списков: {dict_with_lists}")
print()

# 4. Генерация комбинаций и замена на средние значения
print("4. Генерация комбинаций букв")
my_dict = {1: 'abc', 2: 'def'}
key_to_use = 1
if key_to_use in my_dict:
    combinations = [''.join(perm) for perm in itertools.permutations(my_dict[key_to_use])]
    print(f"Комбинации для ключа {key_to_use}: {combinations}")

# Замена на средние значения
dict_with_number_lists = {1: [2, 3, 4], 3: [5, 6, 7], 5: [8, 9, 0]}
averages_dict = {key: mean(values) for key, values in dict_with_number_lists.items()}
print(f"Средние значения: {averages_dict}")
print()

# 5. Три наибольших значения и сравнение словарей
print("5. Три наибольших значения")
my_dict = {1: 2, 3: 4, 5: 6, 2: 8, 4: 1}
print(f"Словарь: {my_dict}")

# Три наибольших значения
three_largest = sorted(my_dict.values(), reverse=True)[:3]
print(f"Три наибольших значения: {three_largest}")

# Сравнение двух словарей
dict1 = {1: 2, 3: 4}
dict2 = {1: 3, 3: 4}
comparison = {key: (dict1.get(key), dict2.get(key)) for key in set(dict1) | set(dict2)}
print(f"Сравнение значений: {comparison}")
print()

